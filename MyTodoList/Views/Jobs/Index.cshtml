@using MyTodoList.Data.Models
@model Job

@{
ViewData["Title"] = "Create";
}


<div class=" container-fluid d-flex flex-column justify-content-center text-center">
    <h2>Нове завдання</h2>
    <form asp-action="Index" method="post" class="d-flex justify-content-center">
        <div class="form-group">
            <label asp-for="Name" style="display: none;">Назва завдання</label>
            <input asp-for="Name" class="form-control" placeholder="Сформулюйте завдання" style="width: 30vw"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" style="display: none;">Категорія</label>
            <select asp-for="CategoryId" class="form-control mx-md-2"  style="width: 9vw" asp-items="ViewBag.Categories">
                <option value="">Оберіть категорію</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button type="submit" class="btn btn-primary" style="width: 5vw">Створити</button>
            </div>
        </div>
    </form>
</div>



